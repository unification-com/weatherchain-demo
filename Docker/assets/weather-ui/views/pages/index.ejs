<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>WeatherChain</title>
    
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>
<body>

    <header>
      <!-- Fixed navbar -->
      <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="#">WeatherChain</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active"><a class="nav-link" href="/">Weather Data</a></li>
            <li class="nav-item"><a class="nav-link" href="/validate">Block Validation</a></li>
          </ul>
        </div>
      </nav>
    </header>
  
    <!-- Begin page content -->
    <main role="main" class="container">
        <br>
    <h1 class="mt-5">Updates for London, UK</h1>
    <p class="lead">
        Block #: <a target="_blank" id="block_num"></a><br>
        Current Time: <span id="block_time"></span><br>
        Contract: <a href="http://172.25.0.6:8081/address/0x345ca3e014aaf5dca488057592ee47305d9b3e10" target="_blank">0x345ca3e014aaf5dca488057592ee47305d9b3e10</a><br>
        Tx: <a target="_blank" id="tx"></a><br>
        Weather: <span id="weather_desc"></span><br>
        Temperature: <span id="temperature"></span><br>
        Humidity: <span id="humidity"></span><br>
        Visibility: <span id="visibility"></span><br>
        Wind Direction: <span id="windDirection"></span><br>
        Wind Gust: <span id="windGust"></span><br>
        Wind Speed: <span id="windSpeed"></span><br>
    </p>

    </main>

    <footer class="footer">
    <div class="container">
        <span class="text-muted"></span>
    </div>
    </footer>

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<!-- Popper JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

<script type="text/javascript" src="js/web3.min.js"></script>
    <script type="text/javascript" src="js/WeatherService.proto.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/numeral.js/2.0.6/numeral.min.js"></script>


<script type="text/javascript">

    $(document).ready(function () {
        let weatherService = new WeatherServiceContract('<%= WEATHER_ORACLE_CONTRACT_ADDRESS%>',
                                '<%= WORKCHAIN_WEB3_PROVIDER_URL%>',
                                <%- JSON.stringify(WEATHER_ORACLE_ABI)%>);
        updateWeather();
        setInterval(function(){
            updateWeather();
         }, 1000);

         function updateWeather() {
             weatherService.getWeatherUpdate(function(results) {
                let data = results[0];
                let now = new Date(Date.now());
                $('#block_num').text(data.blockNumber);
                $('#block_num').attr('href','http://172.25.0.6:8081/block/' + data.blockNumber);
                $('#block_time').text(now.toString());
                $('#tx').text(data.transactionHash);
                $('#tx').attr('href','http://172.25.0.6:8081/tx/' + data.transactionHash);
                $('#weather_desc').text(data.returnValues.weatherDescription);
                $('#temperature').text(data.returnValues.temperature);
                $('#humidity').text(data.returnValues.humidity);
                $('#visibility').text(data.returnValues.visibility);
                $('#windDirection').text(data.returnValues.windDirection);
                $('#windGust').text(data.returnValues.windGust);
                $('#windSpeed').text(data.returnValues.windSpeed);
            });
         }

    });
</script>
</body>
</html>